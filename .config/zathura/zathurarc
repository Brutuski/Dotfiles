#Copy selection to system keyboard
set selection-clipboard clipboard

#Enable incremental search
set incremental-search true

#Zoom and Scroll step
set smooth-scroll true
set zoom-step 10
set scroll-step 150

set guioptions ""
set page-padding 10

#Fit width 
set adjust-open "best-fit"

#Window title
set window-title-basename true

#Font
set font "Hack Nerd Mono 10"

#Key bindings
map [normal]		<F11> toggle_fullscreen
map [fullscreen]	<F11> toggle_fullscreen
map n			navigate next
map p			navigate previous


#Colors
set default-bg "#263238"
set default-fg "#e91e63"

set recolor-darkcolor  "#F8F8F2"
set recolor-lightcolor "#19242F"

set statusbar-fg "#F8F8F2"
set statusbar-bg "#2B3E50"

set inputbar-fg "#F8F8F2"
set inputbar-bg "#19242F"

set completion-highlight-fg "#E24C49"
set completion-highlight-bg "#E6DB74"

set highlight-color "#CD853F"
set highlight-active-color "#E57C46"

set notification-fg "#F8F8F2"
set notification-bg "#19242F"
