#Copy selection to system keyboard
set selection-clipboard clipboard

#Enable incremental search
set incremental-search true

#Zoom and Scroll step
set smooth-scroll true
set zoom-step 10
set scroll-step 150

set guioptions "s"
set page-padding 10

#Fit width 
set adjust-open "best-fit"

#Window title
set window-title-home-tilde true
set statusbar-basename true

#Font
set font "Cantarell Regular Thin 12"

#Recolor
set recolor false

#Key bindings
map [normal]		<F11> toggle_fullscreen
map [fullscreen]	<F11> toggle_fullscreen
map n			navigate next
map p			navigate previous

# Lighthaus Colors:

set notification-error-bg       "#FC2929" # Red
set notification-error-fg       "#18191E" # Foreground
set notification-warning-bg     "#E25600" # Orange
set notification-warning-fg     "#18191E" # Selection
set notification-bg             "#D68EB2" # Background
set notification-fg             "#18191E" # Foreground

set completion-bg               "#18191E" # Background
set completion-fg               "#44B273" # Comment
set completion-group-bg         "#18191E" # Background
set completion-group-fg         "#44B273" # Comment
set completion-highlight-bg     "#21252D" # Selection
set completion-highlight-fg     "#FFFF00" # Foreground

set index-bg                    "#18191E" # Background
set index-fg                    "#44B273" # Foreground
set index-active-bg             "#21252D" # Current Line
set index-active-fg             "#FFFF00" # Foreground

set inputbar-bg                 "#21252D" # Background
set inputbar-fg                 "#FFFADE" # Foreground
set statusbar-bg                "#21252D" # Background
set statusbar-fg                "#D68EB2" # Foreground

set highlight-color             "#D68EB2" # Orange
set highlight-active-color      "#ff79c6" # Pink

set default-bg                  "#18191E" # Background
set default-fg                  "#FFEE79" # Foreground

set render-loading              true
set render-loading-fg           "#FFEE79" # Background
set render-loading-bg           "#18191E" # Foreground

# Recolor mode settings

set recolor-lightcolor          "#21252D" # Background
set recolor-darkcolor           "#FFEE79" # Foreground

